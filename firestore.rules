rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow users to read and write their own data (recursive for subcollections)
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow public access to questions for the quiz feature
    match /questions/{questionId} {
      allow read, write: if true;
    }

    // Allow access to careerPaths for seeding and roadmap visualization
    match /careerPaths/{path=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}